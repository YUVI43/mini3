<% layout('/layouts/Boilerplate') %>

<div class="row">
  <div class="col-6">
    <div class="card mb-5">
      <img src="<%= villa.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= villa.title %></h5>
        <p class="card-text">Description different for each villa</p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= villa.location %></li>
        <li class="list-group-item"><%= villa.price %>/night</li>
        <li class="list-group-item">A third item</li>
      </ul>
      <div class="card-body">
        <a
          class="card-link btn btn-warning"
          href="/villas/<%=villa._id%>/edit"
          >Edit
        </a>

        <form
          class="d-inline"
          action="/villas/<%=villa._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
        <div class="card-footer text-muted mt-2">
          <a href="/villas">All villas</a>
        </div>
      </div>
  
      
    </div>
    
  </div>
  <div class="col-6">
    <h2>Leave a Review</h2>
      <form
        action="/villas/<%=villa._id%>/reviews"
        method="post"
        class="mb-3 validated-form"
      >
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input
            type="range"
            class="form-range"
            min="1"
            max="5"
            name="review[rating]"
            id="rating"
          />
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Review</label>
          <textarea
            class="form-control"
            name="review[body]"
            id="body"
            cols="30"
            rows="3"
            required
          ></textarea>
        </div>
        <button class="btn btn-success">Submit</button>
      </form>
      <h3>Reviews of the CUstomer</h3>

        <% for(let review of villa.reviews){ %>
         <div class="card mb-3">
      <div class="card-body">
         <h5 class="card-title">Rating:  <%=review.rating %></h5>
         <p class="card-text">Review: <%=review.body %></p>
         <form action="/villas/<%=villa._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
          <button class="btn btn-sm btn-danger "></button>
         </form>
        </div>
         </div>
      
      <% } %>
  </div>
</div>